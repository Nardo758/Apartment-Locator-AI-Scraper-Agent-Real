{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "lib": ["deno.ns", "deno.window"],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowImportingTsExtensions": true
    },
    "tasks": {
        "scrape": {
            "script": "src/main.ts",
            "args": ["--unstable-sloppy-imports"],
            "type": "run"
        },
        "test-claude": {
            "script": "test-claude.ts",
            "args": ["--unstable-sloppy-imports"],
            "type": "run"
        }
    },
    "importMap": "./import_map.json"
}