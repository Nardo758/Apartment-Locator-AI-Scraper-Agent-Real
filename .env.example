# Enhanced Property Scraper System - Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# SUPABASE CONFIGURATION (Required)
# =============================================================================
# Get these from your Supabase project dashboard at https://supabase.com/dashboard
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# =============================================================================
# AI SERVICES (Required)
# =============================================================================
# Claude API key from Anthropic Console: https://console.anthropic.com/
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Optional: OpenAI API key (fallback, if needed)
# OPENAI_API_KEY=your-openai-api-key-here

# =============================================================================
# SCRAPER CONFIGURATION (Optional - defaults provided)
# =============================================================================
# Enable/disable scraping globally
SCRAPING_ENABLED=true

# Enable/disable Claude analysis
CLAUDE_ANALYSIS_ENABLED=true

# Batch size for scraping operations
BATCH_SIZE=50

# Daily cost limit in USD
DAILY_COST_LIMIT=50

# Maximum consecutive failures before auto-disabling source
MAX_CONSECUTIVE_FAILURES=5

# Rate limiting delay between requests (milliseconds)
RATE_LIMIT_DELAY_MS=1000

# Comma-separated list of regions to scrape
SCRAPING_REGIONS=atlanta,new-york,chicago,miami,dallas

# Auto-pause scraping on errors
AUTO_PAUSE_ON_ERRORS=true

# Quality threshold for success rate (percentage)
QUALITY_THRESHOLD=70

# =============================================================================
# DEPLOYMENT ENVIRONMENT (Optional)
# =============================================================================
# Environment name (development, staging, production)
NODE_ENV=production

# =============================================================================
# MONITORING & ALERTS (Optional)
# =============================================================================
# Slack webhook URL for notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# Email for alerts (if using email notifications)
ALERT_EMAIL=your-email@example.com

# =============================================================================
# CLAUDE SPECIFIC SETTINGS (Optional - defaults provided)
# =============================================================================
# Claude model to use
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# Maximum tokens for Claude requests
CLAUDE_MAX_TOKENS=4000

# Temperature for Claude requests (0.0 to 1.0)
CLAUDE_TEMPERATURE=0.1

# Minimum confidence threshold for Claude analysis
CLAUDE_CONFIDENCE_THRESHOLD=75

# =============================================================================
# ADVANCED SETTINGS (Optional)
# =============================================================================
# Intelligence cache duration in hours
INTELLIGENCE_CACHE_HOURS=168

# Cost alert threshold (percentage of daily limit)
COST_ALERT_THRESHOLD=80

# Enable debug logging
DEBUG=false